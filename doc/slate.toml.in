[library]
version = "@VERSION@"
browse_url = "https://github.com/geoffjay/slate/"
repository_url = "https://github.com/geoffjay/slate.git"
website_url = "https://github.com/geoffjay/slate"
authors = "Geoff Johnson"
license = "GPL-3.0-or-later"
description = "A configurable dashboard application for GNOME"

dependencies = [
  "GLib-2.0",
  "Gio-2.0",
  "Gtk-4.0",
  "Adw-1",
]

devhelp = true
search_index = true

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
base_url = "https://github.com/geoffjay/slate/blob/main/"

[extra]
content_files = [
  "configuration.md",
  "usage.md",
]

content_images = [
]

urlmap_file = "urlmap.js"
