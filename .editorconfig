# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

# C source and headers (GNOME/GLib style: 2 spaces)
[*.{c,h}]
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
tab_width = 2

# Vala sources and VAPI definitions
[*.{vala,vapi}]
indent_size = 4
tab_width = 4
indent_style = tab
insert_final_newline = true

[*.{xml.in,xml}]
indent_size = 2
tab_width = 2
indent_style = space

[*.json]
indent_size = 4
tab_width = 4

# Meson build files
[meson.build]
indent_size = 2
tab_width = 2
indent_style = space

[meson_options.txt]
indent_size = 2
tab_width = 2
indent_style = space

# Markdown: preserve trailing spaces (for hard line breaks)
[*.md]
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
