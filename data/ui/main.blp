using Gtk 4.0;
using Adw 1;

ApplicationWindow main_window {
  title: "Slate";
  default-width: 1024;
  default-height: 768;

  [titlebar]
  HeaderBar {
    title-widget: Adw.WindowTitle { title: "Slate"; };
  }

  Box {
    orientation: vertical;
    spacing: 12;
    margin-top: 24;
    margin-bottom: 24;
    margin-start: 24;
    margin-end: 24;

    Button close_button {
      label: "Close";
    }
  }
}

